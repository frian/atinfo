                {# CREATE PETALS #}
                {% for i in 1..15 %}
                    <div class="contactPetal contactPetal{{ i }} contactPetalAngleColor{{ i }}"></div>
                {% endfor %}

            </div>
        {% endfor %}


        {# CREATE FLOWER CONTAINERS #}
        {% for i in [2,3,5,6,8,9,11,12] %}
