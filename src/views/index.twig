{% endblock %}

{% block content %}

{# Check if we got some flash messages #}
{% if app.session.flashbag.peekAll()|length > 0 %}
    <div id="flash">
        <div class="vertMiddle">
        {% for message in app.session.getFlashBag.get('message') %}
            {{ message }}
        {% endfor %}
        </div>
    </div>
{% endif %}


<div id="indexContent">
    <div id="center"></div>

        <div id="indexTextContainer">

            <div id="atinfo">atinfo</div>
            <!-- <div id="indexText1" class="indexText">
                modern web
            </div>
            <div id="indexText2" class="indexText">
                development
            </div> -->
            <div class="nav" style="white-space: nowrap;">
                <a class="serviceLink" href="/services">services</a>
                <a class="contactLink" href="/contact">contact</a>
            </div>
            <div class="info">
                at-info.ch &copy; 2006-2017
            </div>
        </div>

        <div id="flowerContainer">
            {# CREATE PETALS #}
            {% for i in 1..36 %}
                <div id="indexPetal{{ i }}" class="indexPetal"></div>
            {% endfor %}
        </div>

    </div>
</div>

{% endblock %}
